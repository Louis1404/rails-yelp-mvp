<%= simple_form_for [:admin, @restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :phone_number %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.submit "edit a restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
